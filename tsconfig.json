{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "declaration": true,
    "strict": true,
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "types": ["react", "react-dom", "vitest/globals"],
    "skipLibCheck": true
  },
  "exclude": ["**/*.stories.tsx", "**/*.stories.mdx"]
}
